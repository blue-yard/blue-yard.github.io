mixin movie
	.movie.qanda__background.qanda-parent
		- var cachebust = Math.floor(Math.random() * 99099999999999);
		- var n = 0;
		- var classname = 'video current'
			while n < 5
				if n != 0
					- classname = 'video';
				video(class!=classname playsinline preload="metadata" muted poster='video/blueyard__'+ n +'.jpg')
					source(src='video/blueyard__'+ n +'.webm'+ '?cachebust=' + cachebust type='video/webm')
					source(src='video/blueyard__'+ n +'.mp4'+ '?cachebust=' + cachebust type='video/mp4')
					source(src='video/blueyard__'+ n +'.ogv'+ '?cachebust=' + cachebust type='video/ogg')
				- n++

mixin qanda__item(item)
	li.qanda__item(class!=attributes.class data-probability!= item.probability)
		h2.qanda__question
			if (item.questionhref)
				a(href!=item.questionhref, target="_blank")
					span= item.question
			else
				span= item.question

		ul.qanda__answer
			each answer in item.arrAnswer
				- href = 'http://' + answer['domain'] + '/'
				- src = "image/entity/" + answer['logo']
				- title = answer['name']


				- logowidth = answer['logowidth']
				- logoheight = answer['logoheight']
				- logow = logowidth / Math.sqrt(logowidth * logoheight)
				- logoh = 1/logow
				- logoy = answer['logotop']
				li
					a(href= href, target="_blank")
						img(src= src, title= title, alt= title, style= '--logow:' + logow +';--logoh:' + logoh+';--logoy:' + logoy)

mixin portfolio-deck__card(company, link)

	- logowidth = company['logowidth']
	- logoheight = company['logoheight']
	- logow = logowidth / Math.sqrt(logowidth * logoheight)
	- logoh = 1/logow


	li.deck__card.js-lurk.js-lurk--opacity.js-lurk--under(style="color:" + company['color'])
		figure.deck__figure
			.portfolio__brand-logo
				img(src="image/entity/" + company['logo'] alt= company['name'], style= '--logow:' + logow +';--logoh:' + logoh)
			figcaption.deck__url
				a(href="http://" + company['domain'] + "/" title="visit website")
					span!= company['domain']
		a(href= link title="learn more")
			.deck__text
				p
						strong= company['name']
						block

mixin updates-deck__card(company, link, image, alt, logocolormode)

	- logowidth = company['logowidth']
	- logoheight = company['logoheight']
	- logow = logowidth / Math.sqrt(logowidth * logoheight)
	- logoh = 1/logow


	li.deck__card.js-lurk.js-lurk--opacity.js-lurk--under
		a(href= link title="learn more")
			figure.deck__figure
				img.update__image(src="image/update/" + image, alt= alt)
				img.update__brand-logo(class=logocolormode src="image/entity/" + company['logo'], alt= company['name'], style= '--logow:' + logow +';--logoh:' + logoh)
			.deck__text
				p
					block


